<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="com.codepath.apps.simpletweet.Activities.UserProfileActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/profileBanner"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/profilePic"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/profilePic"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/screenName"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/name"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bio"
            android:layout_below="@id/screenName"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationPin"
            android:layout_below="@id/bio"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/ic_vector_location_activity"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:layout_toRightOf="@id/locationPin"
            android:layout_below="@id/bio"/>
        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/balloon"
            android:layout_below="@id/location"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/ic_profile_bio_balloon_convertimage"
            />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birthday"
            android:layout_below="@id/location"/>
            <!--android:layout_toRightOf="@id/balloon"-->



    </RelativeLayout>

</layout>
